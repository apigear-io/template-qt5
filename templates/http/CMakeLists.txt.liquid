{% assign module_id = module.name|identifier | append: "_http" %}
{% assign MODULE_ID = module.name|identifier|constant | append: "_HTTP" %}
{% assign module_path = module.name|path %}
{% assign SOURCES = MODULE_ID | append: "_SOURCES" -%}

find_package(Qt5 REQUIRED COMPONENTS Core Qml Network)
set(OUTPUT_PATH ${LIBRARY_PATH}/)

set ({{MODULE_ID}}_SOURCES
    httpfactory.cpp
{%- for interface in module.interfaces %}
    http{{interface.name|lower}}.cpp
{%- endfor %}
)

# dynamic library

add_library({{module_id}} STATIC {{ "${" | append: SOURCES | append: "}"}})
target_include_directories({{module_id}} PRIVATE ../{{module.name|identifier}})
target_link_libraries({{module_id}} PRIVATE Qt5::Core Qt5::Qml Qt5::Network {{module.name|identifier}}_api)
